# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/qa_platform
MONGODB_URI_TEST=mongodb://localhost:27017/qa_platform_test

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_app_password
EMAIL_FROM=noreply@qaplatform.com

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=qa_platform

# Search Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# External Services
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret
COOKIE_SECRET=your_cookie_secret

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Backup Configuration
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30

# Notification Configuration
PUSH_NOTIFICATION_KEY=your_push_notification_key
PUSH_NOTIFICATION_SECRET=your_push_notification_secret

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_API_KEY=your_analytics_api_key

# CDN Configuration
CDN_URL=https://cdn.qaplatform.com
CDN_KEY=your_cdn_key
CDN_SECRET=your_cdn_secret

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT=5000

# Feature Flags
ENABLE_TWO_FACTOR=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_FILE_UPLOADS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ELASTICSEARCH=true

# Performance
MAX_CONNECTIONS=100
KEEP_ALIVE_TIMEOUT=120000
REQUEST_TIMEOUT=30000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true

# API Versioning
API_VERSION=v1
API_PREFIX=/api

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# User Profile Settings
MAX_PROFILE_SIZE=1048576
ALLOWED_PROFILE_EXTENSIONS=jpg,jpeg,png,gif
DEFAULT_AVATAR_URL=https://cdn.qaplatform.com/defaults/avatar.png
MAX_BIO_LENGTH=500
MAX_LOCATION_LENGTH=100
MAX_WEBSITE_LENGTH=200
MAX_SOCIAL_LINKS=5

# Privacy Settings
DEFAULT_PRIVACY_LEVEL=public
ENABLE_PROFILE_VISIBILITY=true
ENABLE_ACTIVITY_VISIBILITY=true
ENABLE_EMAIL_VISIBILITY=true

# Notification Preferences
DEFAULT_EMAIL_NOTIFICATIONS=true
DEFAULT_PUSH_NOTIFICATIONS=true
DEFAULT_MENTION_NOTIFICATIONS=true
DEFAULT_COMMENT_NOTIFICATIONS=true
DEFAULT_FOLLOW_NOTIFICATIONS=true

# Activity Tracking
ACTIVITY_HISTORY_RETENTION_DAYS=90
MAX_ACTIVITY_ITEMS=1000
ENABLE_ACTIVITY_LOGGING=true

# Reputation System
REPUTATION_ENABLED=true
INITIAL_REPUTATION=0
MIN_REPUTATION_FOR_PRIVILEGES=100
REPUTATION_DECAY_DAYS=30

# Following System
MAX_FOLLOWING=1000
MAX_FOLLOWERS=10000
ENABLE_FOLLOW_NOTIFICATIONS=true

# Content Preferences
DEFAULT_CONTENT_LANGUAGE=en
DEFAULT_CONTENT_TIMEZONE=UTC
ENABLE_CONTENT_FILTERING=true
MAX_SAVED_ITEMS=1000

# API Rate Limits
API_RATE_LIMIT_WINDOW=60
API_RATE_LIMIT_MAX=1000
API_RATE_LIMIT_BY_IP=true
API_RATE_LIMIT_BY_USER=true

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true
ENABLE_FRAME_PROTECTION=true

# Session Management
SESSION_LIFETIME=86400
SESSION_RENEWAL_THRESHOLD=3600
MAX_CONCURRENT_SESSIONS=5
ENABLE_SESSION_TRACKING=true

# IP Blocking
ENABLE_IP_BLOCKING=true
MAX_FAILED_ATTEMPTS=5
IP_BLOCK_DURATION=3600
WHITELISTED_IPS=127.0.0.1,::1

# Two-Factor Authentication
ENABLE_2FA=true
2FA_ISSUER=QA Platform
2FA_ALGORITHM=SHA1
2FA_DIGITS=6
2FA_PERIOD=30

# API Key Management
API_KEY_EXPIRY_DAYS=365
API_KEY_PREFIX=qa_
API_KEY_LENGTH=32
MAX_API_KEYS_PER_USER=5

# Webhook Management
MAX_WEBHOOKS_PER_USER=10
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000
WEBHOOK_MAX_PAYLOAD_SIZE=1048576

# Integration Settings
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
GITHUB_API_RATE_LIMIT=5000
GOOGLE_API_KEY=your_google_api_key
GOOGLE_API_RATE_LIMIT=10000

# Testing Configuration
TEST_TIMEOUT=30000
TEST_RETRY_ATTEMPTS=3
TEST_PARALLEL_JOBS=4
COVERAGE_THRESHOLD=80

# Documentation
API_DOCS_PATH=/api-docs
API_DOCS_THEME=default
API_DOCS_LOGO=https://cdn.qaplatform.com/logo.png
API_DOCS_FAVICON=https://cdn.qaplatform.com/favicon.ico

# Deployment
DEPLOYMENT_ENV=development
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_TIMESTAMP=2024-03-20T00:00:00Z 